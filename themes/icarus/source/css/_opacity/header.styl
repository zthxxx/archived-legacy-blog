#header
    background: none
    box-shadow: none
    a,
    a:visited,
    .search-form-submit,
    .search-form-input
        color: $-main-word-color
    .search-form-input
        &::-webkit-input-placeholder
        &:-moz-placeholder
        &::-moz-placeholder
        &:-ms-input-placeholder
